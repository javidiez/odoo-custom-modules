<odoo>
    <data>
        <record id="partner_documents" model="ir.ui.view">
            <field name="name">partner.document.form.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='internal_notes']" position="after">
                    <page name="documents" string="Documents">
                        <field name="document_ids">
                            <list>
                                <field name="name" />
                                <field name="file" />
                            </list>
                            <form>
                                <group>
                                    <field name="name" />
                                </group>
                                <group>
                                    <field name="file" />
                                </group>
                            </form>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
