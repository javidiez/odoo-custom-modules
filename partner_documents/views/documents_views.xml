<odoo>
    <data>

        <record id="partner_document_search_view" model="ir.ui.view">
            <field name="name">partner.document.search.view</field>
            <field name="model">partner.document</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="partner_id" />
                    <group expand="0">
                        <filter name="name" string="Document" domain="[('name', '=' , 'self')]"
                            context="{'group_by':'name'}" />
                        <filter name="partner_id" string="Contact"
                            domain="[('partner_id', '=' , 'self')]"
                            context="{'group_by':'partner_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="partner_document_tree_view" model="ir.ui.view">
            <field name="model">partner.document</field>
            <field name="name">partner.document.list.view</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" />
                    <field name="partner_id" />
                </list>
            </field>
        </record>

        <record id="partner_document_form_view" model="ir.ui.view">
            <field name="model">partner.document</field>
            <field name="name">partner.document.form.view</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name" />
                        <field name="partner_id" />
                        <field name="file" />
                    </group>
                </form>
            </field>
        </record>

        <record id="partner_document_action" model="ir.actions.act_window">
            <field name="name">Documents</field>
            <field name="res_model">partner.document</field>
            <field name="view_mode">search,list,form</field>
        </record>

    </data>

</odoo>
