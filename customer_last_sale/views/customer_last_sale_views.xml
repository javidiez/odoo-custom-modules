<odoo>
  <data>
      <!-- Extender la vista de formulario de res.partner -->
      <record id="view_partner_form_last_sale" model="ir.ui.view">
          <field name="name">res.partner.form.last.sale</field>
          <field name="model">res.partner</field>
          <field name="inherit_id" ref="base.view_partner_form"/>
          <field name="arch" type="xml">
              <xpath expr="//field[@name='property_product_pricelist']" position="after">

                      <field name="last_sale_order_date" string="Last sale order date" />
                      <field name="sale_order_id" string="Sale order" />
                 
              </xpath>
          </field>
      </record>
  </data>
</odoo>
