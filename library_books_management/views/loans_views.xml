<odoo>
    <data>

        <record id="loan_tree_view" model="ir.ui.view">
            <field name="name">book.loan.tree.view</field>
            <field name="model">book.loan</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="book_id" />
                    <field name="partner_id" />
                    <field name="start_date" />
                    <field name="end_date" />
                </tree>
            </field>
        </record>

        <record id="loan_form_view" model="ir.ui.view">
            <field name="name">book.loan.form.view</field>
            <field name="model">book.loan</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id" />
                            </group>
                            <group>
                                <field name="book_id" />
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="start_date" />
                            </group>
                            <group>
                                <field name="end_date" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Contact information">
                                <group>
                                    <group>
                                        <field name="phone" />
                                    </group>
                                    <group>
                                        <field name="city" />
                                    </group>

                                    <group>
                                        <field name="mobile" />
                                    </group>
                                    <group>
                                        <field name="state" />
                                    </group>
                                    <group>
                                        <field name="street" />
                                    </group>
                                    <group>
                                        <field name="country" />
                                    </group>
                                    <group>
                                        <field name="zip" />
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field widget="mail_thread" name="message_ids" />
                        <field widget="mail_activity" name="activity_ids" />
                    </div>
                </form>
            </field>
        </record>

        <record id="loan_action" model="ir.actions.act_window">
            <field name="name">Loans</field>
            <field name="res_model">book.loan</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
